pipeline {
    agent any

    stages {
        stage('git-checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/LegitScarf/spring-petclinic-k8'
            }
        }
        stage('clean') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('package') {
            steps {
                // Ensure maven is installed on your EC2 instance
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            mail to: 'ashutoshjhas250904@gmail.com',
            subject: 'jenkins job triggered',
            body: "Your jenkins mail was sucessful\n\nJob Name: ${env.JOB_NAME}\nBuild Number: ${env.BUILD_NUMBER}\nBuild URL: ${env.BUILD_URL}"
        }
    }
} // <--- Added this to close the 'pipeline' block
